generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ShortUrl {
  id        String     @id @default(uuid())
  slug      String     @unique
  targetUrl String
  clicks    Int        @default(0)
  createdAt DateTime   @default(now())
  ClickLog  ClickLog[]

  @@index([createdAt])
}

model ClickLog {
  id         String   @id @default(uuid())
  shortUrlId String
  referrer   String?
  userAgent  String?
  createdAt  DateTime @default(now())
  
  ShortUrl   ShortUrl @relation(fields: [shortUrlId], references: [id])

  @@index([shortUrlId])
  @@index([createdAt])
}
